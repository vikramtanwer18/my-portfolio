{
  "compilerOptions": {
    "baseUrl": ".", // base URL for the project
    "paths": {
      "@/*": ["./src/*"] // Map the `@` alias to the `src` folder
    },
    "jsx": "react-jsx",
    "moduleResolution": "node",
    "strict": true
  },
  "include": [
    "src/**/*.ts",
    "src/**/*.tsx"
  ]
}
